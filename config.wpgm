import wollok.game.*
import vias.*
import textos.*
import trenes.*

program chuchugame{
  game.width(33)
  game.height(15)
  game.cellSize(50)
  game.ground("terreno1.png")
  game.title("Chuchu game")
  
  const tren1 = new Trenes(
    posicionInicial = game.at(1,0),
    position = game.at(1,0),
    identificacion = "TR1",
    image = "tren2.png"
  )

  const tren2 = new Trenes(
      posicionInicial = game.at(18,9),
      position = game.at(18,9),
      identificacion = "TR2",
      image = "tren5.png"
  )

  const tren3 = new Trenes(
      posicionInicial = game.at(22,8),
      position = game.at(22,8),
      identificacion = "TR3",
      image = "tren8.png"
  )

  const tren4 = new Trenes(
    posicionInicial = game.at(16,9),
    position = game.at(16,9),
    identificacion = "TR4",
    image = "tren6.png"
  )

  const ramales = [
    new Ramales(
      position = game.at(1,0),
      imagen = "ramal1.png"
    ),
    new Ramales(
      position = game.at(3,9),
      imagen = "ramal4.png"
    ),
    new Ramales(
      position = game.at(26,1),
      imagen = "ramal3.png"
    )
  ]

  const finesdevia = [
    new Finesdevia(
      position = game.at(24,11.5),
      imagen = "finvia1.png"
    ),
    new Finesdevia(
      position = game.at(32,9),
      imagen = "finvia2.png"
    ),
    new Finesdevia(
      position = game.at(26,-5),
      imagen = "finvia3.png"
    ),
    new Finesdevia(
      position = game.at(0,9),
      imagen = "finvia2.png"
    )
  ]

  const avisosramal = [
    new Avisosramal(
      position = game.at(20,6),
      texto = "Presione E para cambiar al ramal 2"
    ),
    new Avisosramal(
      position = game.at(20,6),
      texto = "Presione Z para cambiar al ramal 3"
    ),
    new Avisosramal (
      position = game.at(20,7),
      texto = "Presione O para cambiar al ramal 4"
    )
  ]

  game.addVisual(ramales.get(0))
  game.addVisual(finesdevia.get(0))
  game.addVisual(ramales.get(1))
  game.addVisual(finesdevia.get(1))
  game.addVisual(ramales.get(2))
  game.addVisual(finesdevia.get(2))
  game.addVisual(finesdevia.get(3))
  game.addVisual(avisosramal.get(0))
  game.addVisual(avisosramal.get(2))

  keyboard.m().onPressDo{
    game.addVisual(tren1)
  }

  keyboard.a().onPressDo{
    tren2.izquierda()
    tren4.izquierda()
  }

  keyboard.w().onPressDo{
    tren1.diagonal()
    tren3.arriba()
  }

  keyboard.s().onPressDo{
    tren1.diagonalInversa()
    tren3.abajo()
  }

  keyboard.d().onPressDo{
    tren1.derecha()
    tren2.derecha()
    tren4.derecha()
  }
  
  game.onCollideDo(tren1, {findevia1 =>
    tren1.borrar()  
  })

  game.onCollideDo(tren2, {finvia2 =>
    tren2.borrar()
    tren4.restablecer()
    game.removeVisual(avisosramal.get(0))
    game.addVisual(avisosramal.get(1))  
  })

  game.onCollideDo(tren3, {finvia3 =>
    tren3.borrar()  
    game.removeVisual(avisosramal.get(1))
  })

  game.onCollideDo(tren4, {finvia2 =>
    tren4.borrar()
    tren2.restablecer()  
  })

  keyboard.e().onPressDo{
      tren1.borrar()
      game.addVisual(tren2)
      game.removeVisual(avisosramal.get(0))
      game.addVisual(avisosramal.get(1))
  }

  keyboard.z().onPressDo{
      tren4.restablecer()
      tren2.borrar()
      game.addVisual(tren3)
  }

  keyboard.o().onPressDo{
    tren1.borrar()
    game.addVisual(tren4)
    game.removeVisual(avisosramal.get(2)) 
  }

  game.addVisual(estacion)
  game.start()
}



